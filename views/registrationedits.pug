  title Client Registration
.ka-container
  if registration 
  .title
    span Client Registration Form
  form#form.row.g-3(name='clientRegistration' method='POST' action='/update?id='+registration._id)
    .col-md-6
      label.form-label(for='inputname') Full Name
      input#inputFullname.form-control(type='text' name='fullname' value= registration.fullname)
    .col-6
      label.form-label(for='inputcontact') Phone Number
      input#inputContact.form-control(type='text' name='phonenumber' value=registration.phonenumber)
    .col-6
      label.form-label(for='inputniN') NIN
      input#inputniN.form-control(type='text' name='nin' value=registration.nin)
    .col-md-6
      label.form-label(for='inputnumberPlate') Number Plate
      input#inputnumberPlate.form-control(type='text' name='numberplate' value=registration.numberplate)
    .col-md-6
      label.form-label(for='inputFor') Vehicle Type
      select#inputFor.form-select(type='text' name='vehicletype')
        option(selected='') Choose Vehicle type
        option(value='Personal car' selected=registration.vehicletype==='Personal Car') Personal car
        option(value='Taxi' selected=registration.vehicletype==='Taxi') Taxi
        option(value='Boda Boda' selected=registration.vehicletype==='Boda Boda') Boda Boda
        option(value='Coaster' selected=registration.vehicletype==='Coaster') Coaster
        option(value='Truck' selected=registration.vehicletype==='Truck') Truck
    .col-md-6
      label.form-label(for='inputService') Service
      select#inputService.form-select(type='text' name='service')
        option(selected='') Choose Client Service
        option(value='Parking' selected=registration.service==='Parking') Parking
        option(value='Battery Hire' selected=registration.service==='Battery Hire') Battery Hire
        option(value='Puncture Fix' selected=registration.service==='Puncture Fix') Puncture Fix
        option(value='Tyre Pressure' selected=registration.service==='Tyre Pressure') Tyre Pressure
        option(value='Valves' selected=registration.service==='Valves') Valves
