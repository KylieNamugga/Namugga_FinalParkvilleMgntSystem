doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='/css/registration.css')
  title Client Registration
.ka-container
  if registration 
  .title
    span Client Registration Form
  form#form.row.g-3(name='clientRegistration' method='POST' action='/update?id='+registration._id)
    .col-md-6
      label.form-label(for='inputname') Full Name
      input#inputFullname.form-control(type='text' name='fullname' value= registration.fullname)
    .col-6
      label.form-label(for='inputcontact') Phone Number
      input#inputContact.form-control(type='text' name='phonenumber' value=registration.phonenumber)
    .col-6
      label.form-label(for='inputniN') NIN
      input#inputniN.form-control(type='text' name='nin' value=registration.nin)
    .col-md-6
      label.form-label(for='inputService') Service
      input#inputService.form-control(type='text' name='service' value=registration.service)
    .col-md-6
      label.form-label(for='inputPrice') Parking Fee
      input#inputPrice.form-control(type='number' name='servicefee' value=registration.servicefee)
    .col-md-6
      label.form-label(for='inputPrice') Battery Price
      input#inputPrice.form-control(type='number' name='batteryprice' value=registration.batteryprice)
    .col-md-6
      label.form-label(for='inputDuration') Battery Size
      input#inputDuration.form-control(type='text' name='batterysize' value=registration.batterysize)
    .col-md-6
      label.form-label(for='inputPrice') Tyre Price
      input#inputPrice.form-control(type='number' name='tyreprice' value=registration.tyreprice)
    .col-md-6
      label.form-label(for='inputPrice') Tyre Size
      input#inputPrice.form-control(type='text' name='tyresize' value=registration.tyresize)
    .col-12
      button.btn.btn-primary(type='submit') Edit Client Info