doctype html
head
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist/css/bootstrap.css')
  script(src="/bootstrap-5.1.3-dist/js/bootstrap.bundle.js") 
  link(rel='stylesheet' href='/css/dashboard.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js')
  title Reports
  // My table
  .col-div-12
    .box-8
      .content-box
        p
          | Customer Details 
          
        br
        table
          thead
          tr
            th Full Name
            th Phone Number 
            th NIN
            th Vehicle 
            th Date 
            th receipt 
            th Time 
            th Gender
            th Admin Action
          tbody
            if signoffs.length 
            each signoff in signoffs 
              tr
                td #{signoff.fullname}
                td #{signoff.phonenumber}
                td #{signoff.nin}
                td #{signoff.vehicletype}
                td #{signoff.date}
                td #{signoff.receiptnumber}
                td #{signoff.time}
                td #{signoff.gender}
                td 
                  a(href='/report')
                    button.kylie(title='Print')
                      i.bi.bi-printer(style='color: white;')
                  // Button trigger modal
                  button.kylie(type='button' data-bs-toggle='modal' data-bs-target='#staticBackdrop')
                    i.bi.bi-trash3(style='color: white;')
                  // Modal
                  #staticBackdrop.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='staticBackdropLabel' aria-hidden='true')
                    .modal-dialog
                      .modal-content
                        .modal-header
                          h5#staticBackdropLabel.modal-title
                            | Delete Client
                            | Entry
                          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                        .modal-body
                          | Deleting will permanently erase this Client&apos;s Details.
                          br
                          |                                                         Do you want to continue?
                        .modal-footer
                          button.btn.btn-primary(type='button' data-bs-dismiss='modal') No
                          button.btn.btn-danger(type='button') Delete
                  a(href='/dashboard')
                    button.kylie(title='Dashboard')
                      i.bi.bi-person-square(style='color: white;')


script(src='/js/dashboard.js')
