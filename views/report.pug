doctype html
head
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist/css/bootstrap.css')
  script(src="/bootstrap-5.1.3-dist/js/bootstrap.bundle.js") 
  link(rel='stylesheet' href='/css/dashboard.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js')
  title Reports
  // My table
  .col-div-12
    .box-8
      .content-box
        p
          | Customer Details
          button.namu(onclick='window.print()') Print Report
          a(href='/dashboard')
                    button.namugga(title='Back to Dashboard')
                      i.bi.bi-person-square(style='color: white;')
           
          
           


          
        br
        table
          thead
          tr
            th Full Name
            th Phone Number 
            th NIN
            th Vehicle 
            th Date 
            th receipt 
            th Time 
            th Gender
          tbody
            if signoffs.length 
            each signoff in signoffs 
              tr
                td #{signoff.fullname}
                td #{signoff.phonenumber}
                td #{signoff.nin}
                td #{signoff.vehicletype}
                td #{signoff.date}
                td #{signoff.receiptnumber}
                td #{signoff.time}
                td #{signoff.gender}
                

script(src='/js/dashboard.js')
