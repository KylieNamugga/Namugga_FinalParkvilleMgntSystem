doctype html
head
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist/css/bootstrap.css')
  //- script(rel='stylesheet' href='/bootstrap-5.1.3-dist/js/bootstrap.bundle.js')
  script(src="/bootstrap-5.1.3-dist/js/bootstrap.bundle.js") 
  link(rel='stylesheet' href='/css/dashboard.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js')
  title Dashboard
#mySidenav.sidenav
  p.logo PARKVILLE
  a.icon-a(href='/registration')
    i.fa.fa-users.icons
    | Register New Client
  a.icon-a(href='/signup')
    i.fa.fa-user.icons
    | Register New manager
  a.icon-a(href='#')
    i.fa.fa-list-alt.icons
    |  Receipts
  #logout.div
    a.icon-a(href='/logout')
      i.fa.fa-power-off(aria-hidden='true')
      |  Log Out
#main
  .head
    .col-div-6
      p.nav  Dashboard
    .col-div-6
      .profile
        p
          | Kylie Namugga 
          i.fa.fa-user(aria-hidden='true')
    .clearfix
  .clearfix
  br
  .col-div-4-1
    .box
      p.head-1 Parking
      if registrations.length 
      each registration in registrations
             #{registration.servicefee}  
      i.fa.fa-car.box-icon
  .col-div-4-1
    .box
      p.head-1 Tyres
      if registrations.length 
      each registration in registrations
             #{registration.tyreprice}
      i.fa.fa-life-ring.box-icon
  .col-div-4-1
    .box
      p.head-1 Battery
      if registrations.length 
      each registration in registrations
             #{registration.batteryprice} 
      i.fa.fa-plus-square.box-icon
  .clearfix
  br
  .col-div-4-1
    #box1.box-1
      .content-box-1
        p.head-1 Income Graph
        br
        canvas#myChart(style='width:90%;max-width:400px')
  .col-div-4-1
    #box2.box-1
      .content-box-1
        p.head-1
          | Daily Income
          span 3/11/2021
        div
          span#money Ugx 0
  .clearfix
  br
  // My table
  .col-div-12
    .box-8
      .content-box
        p Customer Details Table
        br
        table
          thead
            tr
              th Customer Name
              th Service Type
              th Vehicle
              th Fee
              th Admin Actions
          tbody
              if registrations.length 
              each registration in registrations
                tr
                td #{registration.fullname}
                td #{registration.service}
                td #{registration.vehicletype}
                td #{registration.servicefee} 
              // icons
              td
                div
                  
                  a(href='/registration')
                    button.kylie(title='edit')
                      i.bi.bi-pencil(style='color: white;')
                  // Button trigger modal
                  button.kylie(type='button' data-bs-toggle='modal' data-bs-target='#staticBackdrop')
                    i.bi.bi-trash3(style='color: white;')
                  // Modal
                  #staticBackdrop.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='staticBackdropLabel' aria-hidden='true')
                    .modal-dialog
                      .modal-content
                        .modal-header
                          h5#staticBackdropLabel.modal-title
                            | Delete Client
                            | Entry
                          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                        .modal-body
                          | Deleting will permanently erase this Client&apos;s Details.
                          br
                          |                                                         Do you want to continue?
                        .modal-footer
                          button.btn.btn-primary(type='button' data-bs-dismiss='modal') No
                          button.btn.btn-danger(type='button') Delete
              // end icon
script(src='/js/dashboard.js')
